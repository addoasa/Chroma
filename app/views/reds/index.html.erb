<p id="notice"><%= notice %></p>

<h1>Reds</h1>

<table>
  <thead>
    <tr>
      <th>Danceability</th>
      <th>Energy</th>
      <th>Loudness</th>
      <th>Mode</th>
      <th>Valence</th>
      <th>Tempo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reds.each do |red| %>
      <tr>
        <td><%= red.danceability %></td>
        <td><%= red.energy %></td>
        <td><%= red.loudness %></td>
        <td><%= red.mode %></td>
        <td><%= red.valence %></td>
        <td><%= red.tempo %></td>
        <td><%= link_to 'Show', red %></td>
        <td><%= link_to 'Edit', edit_red_path(red) %></td>
        <td><%= link_to 'Destroy', red, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

