<h1 class="page-header"><%= @artist.name %></h1>

<% @artist.albums(country: 'US').each do |album| %>
 <h3><%= album.name %></h3>
 <ul>
   <% album.tracks.each do |track| %>
     <li>
       <%= track.name %>
     </li>
     <audio controls>
            <source src=<%= track::preview_url %> type="audio/ogg">
        </audio>    
   <% end %>
   
 </ul>
<% end %>