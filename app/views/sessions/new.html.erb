  <a class="login-home-nav" href="/">Back</a>
</section>


<section class= "flex-line-login">
    <main class= "login-container"


      <p id=”alert”><%= alert %></p>

      <h1>Login</h1>
        <hr class="line-login">
      <%= form_tag sessions_path do |form| %>
        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email %>
        </div>

        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>

        <div class=”actions”>
          <%= submit_tag "Login" %>
        </div>
      <% end %>

    </main>

    <section class="login-divis-line"></section>


</section>
